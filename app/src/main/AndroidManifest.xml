<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dailymanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyManager">
        <activity android:name=".SplashScreenActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotesAddition"
            android:exported="true" />
        <activity
            android:name=".Notes"
            android:exported="true"
            android:label="@string/title_activity_notes"
            android:theme="@style/Theme.DailyManager.NoActionBar" />
        <activity
            android:name=".Todo"
            android:exported="true"
            android:label="@string/title_activity_todo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Todo_Addition"
            android:exported="true"
            android:label="@string/title_activity_todo"
            android:parentActivityName=".Todo" />
        <activity
            android:name=".HabitsHome"
            android:exported="true"
            android:label="Habits"
            android:theme="@style/Theme.DailyManager.NoActionBar" />
        <activity
            android:name=".Expenses"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>